<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="<%= data.img_url %>" alt="..." /></div>
            <div class="col-md-6">
                <h1 class="display-5 fw-bolder"><%= data.product_name %></h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through"><%= data.price %></span>
                </div>
                <p class="lead"><%= data.description %></p>
                <div class="d-flex">
                    <a href="/product/details/<%= data.uuid %>" class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Go to Product Details
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
