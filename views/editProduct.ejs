<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('partials/head')  %> 
    </head>
    <body>
        <!-- Navigation-->
        <%- include('partials/navbar')  %>
        <!-- Header-->
        <header class="bg-dark py-5">
            <div class="container px-4 px-lg-5 my-5">
                <div class="text-center text-white">
                    <h1 class="display-4 fw-bolder">Edit a product</h1>
                </div>
            </div>
        </header>
        <!-- Section Form-->
        <div class="container mt-5">
            <div class="row">
              <!-- Blog entries-->
              <!-- Nested row for non-featured blog posts-->
              <form action="/edit/<%= product.uuid %>" method="post">
                <div class="row">
                  <div class="col mb-2">
                    <label for="product_name">Product</label>
                    <input id="product_name" type="text" name="product_name" class="form-control" placeholder="Product name" value="<%= product.product_name %>" aria-label="product-name" required>
                  </div>
                  <div class="col mb-2">
                    <label for="price">Price</label>
                    <input id="price" type="number" name="price" class="form-control" value="<%= product.price %>" aria-label="price" required>
                  </div>
                </div>
                <div class="row">
                  <div class="col mb-2">
                    <label for="in_stock">Stock</label>
                    <input id="in_stock" type="number" name="in_stock" class="form-control" value="<%= (product.Stock.in_stock) %>" aria-label="product-stock" required>
                  </div>
                  <div class="col mb-2">
                    <label for="sold">Items Sold</label>
                    <input id="sold" type="number" name="sold" class="form-control" value="<%= (product.Stock.sold) %>" aria-label="sold" required>
                  </div>
                </div>
                <div id="description" class="col mb-2">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-control" required><%= product.description %></textarea>
                </div>
                <div id="img_url" class="col mb-2">
                  <label for="img_url">Img URL</label>
                  <input type="text" name="img_url" class="form-control" aria-label="img-link" value="<%= product.img_url %>">
                </div>
                <button class="btn btn-warning mb-5">Edit</button>
              </form>
            </div>
          </div>
        <!-- Footer-->
        <%- include('partials/footer')  %> 
    </body>
</html>
